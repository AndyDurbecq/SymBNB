{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Commentaires</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Auteur</th>
                <th>Commenaire</th>
                <th>Note</th>
                <th>Annonce</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.createdAt | date('d/m/Y Hi') }}</td>
                <td><img src="{{ comment.author.picture }}" alt="{{ comment.author.fullName }}" class="avatar avatar-mini">{{ comment.author.fullName }}</td>
                <td>{{ comment.content }}</td>
                <td>
                    <span class="badge badge-dark">{{ comment.rating }}</span>
                </td>
                <td>{{ comment.ad.title }}</td>
                <td>
                    <a href="{{ path('admin_comments_edit', {'id': comment.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                    <a href="{{ path('admin_comments_delete', {'id': comment.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
